<%= content_tag :div, id: dom_id(column), class: "card-container", data: { column_id: column.id, card_drag_target: 'column', controller: 'column' } do %>
  <% column.cards.by_position.each do |card| %>
    <%= render 'cards/card', card: card, board: @board, project: @project %>
  <% end %>
<% end %>