<div class="container">
  <p style="color: green"><%= notice %></p>
  <p style="color: red"><%= alert %></p>

  <h1>Sign up</h1>

  <%= simple_form_for @user, url: sign_up_path do |form| %>
    <%= form.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
    
    <%= form.input :password, required: true, input_html: { autocomplete: "new-password" }, hint: "12 characters minimum." %>
    
    <%= form.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" } %>
    
    <%= form.submit "Sign up", class: "form__button" %>
  <% end %>

  <br>

  <div>
    <%= link_to "Sign in", sign_in_path %> |
    <%= link_to "Forgot your password?", new_identity_password_reset_path %>
  </div>
</div>
